{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "bundler", // Override to a modern module resolution (old resolution comes from "extends": "expo/tsconfig.base" it still uses "node10")
    "types": ["node"],
    "paths": { "@/*": ["./*"] }
  },
  "include": ["**/*.ts", "**/*.tsx", "env.d.ts"]
}
